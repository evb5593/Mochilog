@model IEnumerable<Mochilog.Models.MochiPhoto>

@{
    ViewData["Title"] = "Mochi Gallery";
}

<h2 class="gallery-title">Mochi Gallery</h2>

<div class="mochi-gallery">
    @foreach (var item in Model)
    {
        <div class="mochi-card">
            <img src="~/images/@item.ImageFileName" alt="@item.Title" class="mochi-thumb" />
            <h3>@item.Title</h3>
            <p class="upload-date">Taken: @item.PicTakenDate.ToString("MMMM d, yyyy")</p>
            <p class="upload-date">Uploaded: @item.UploadDate.ToString("MMMM d, yyyy")</p>
        </div>
    }
</div>

<div id="image-modal" class="modal" onclick="closeModal()">
    <img id="modal-image" />
</div>

<style>
    .gallery-title {
        text-align: center;
        color: white;
        margin-top: 2rem;
        text-shadow: 0 0 5px black;
    }

    .mochi-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 2rem;
    }

    .mochi-card {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        background: rgba(0, 0, 0, 0.5);
        padding: 1rem;
        border-radius: 10px;
        color: white;
        text-align: center;
        box-shadow: 0 0 10px rgba(255,255,255,0.2);
        max-width: 300px;
        width: 100%;
        margin: 0 auto;
        line-height: 1.2;
    }

    .mochi-card h3 {
        margin-top: 0.75rem;
        margin-bottom: 0.25rem;
        font-size: 1.2rem;
    }

    .upload-date {
        font-size: 0.9rem;
        color: #ccc;
        margin: 0;
    }

    .mochi-thumb {
        max-width: 100%;
        max-height: 200px;
        height: auto;
        width: auto;
        display: block;
        margin-left: auto;
        margin-right: auto;
        border-radius: 10px;
        object-fit: contain;
        transition: transform 0.3s ease;
        cursor: pointer;
    }

    .mochi-thumb:hover {
        transform: scale(1.1);
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.8);
        justify-content: center;
        align-items: center;
    }

    .modal img {
        max-width: 90%;
        max-height: 90%;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(255,255,255,0.3);
    }    
</style>
<script>
    const modal = document.getElementById("image-modal");
    const modalImage = document.getElementById("modal-image");

    document.querySelectorAll(".mochi-thumb").forEach(img => {
        img.addEventListener("click", () => {
            modal.style.display = "flex";
            modalImage.src = img.src;
        });
    });

    function closeModal() {
        modal.style.display = "none";
    }
</script>
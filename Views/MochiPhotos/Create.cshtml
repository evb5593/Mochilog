@model Mochilog.Models.MochiPhoto

@{
    ViewData["Title"] = "Add Mochi";
}

<h2 class="form-title">Add a new picture of Mochi</h2>

<div class="form-container">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-input" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <label asp-for="PicTakenDate" class="form-label">Date Taken</label>
        <input asp-for="PicTakenDate" type="date" class="form-input" />
        <span asp-validation-for="PicTakenDate" class="text-danger"></span>

        <label asp-for="UploadDate" class="form-label">Date Uploaded</label>
        <input asp-for="UploadDate" type="date" class="form-input" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="UploadDate" class="text-danger"></span>

        <label class="form-label" for="ImageUpload">Upload Image</label>
        <input type="file" name="ImageUpload" accept="image/*" class="form-input" />

        <button type="submit" class="submit-button">Upload Mochi</button>
    </form>

    <div class="back-link">
        <a asp-action="Index">‚ÜêTo Gallery</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-title {
        text-align: center;
        color: white;
        margin-top: 2rem;
        text-shadow: 0 0 5px black;
    }

    .form-container {
        max-width: 400px;
        margin: 2rem auto;
        padding: 2rem;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 15px;
        color: white;
        box-shadow: 0 0 10px rgba(255,255,255,0.2);
    }

    .form-label {
        display: block;
        margin-top: 1rem;
        font-weight: bold;
    }

    .form-input {
        width: 100%;
        padding: 0.5rem;
        margin-top: 0.3rem;
        border-radius: 8px;
        border: none;
        font-size: 1rem;
    }

    .submit-button {
        margin-top: 1.5rem;
        padding: 0.75rem 1.5rem;
        background: #4CAF50;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        width: 100%;
    }

    .submit-button:hover {
        background: #45a049;
    }

    .back-link {
        text-align: center;
        margin-top: 1rem;
    }

    .back-link a {
        color: #ccc;
        text-decoration: none;
    }

    .back-link a:hover {
        text-decoration: underline;
    }
</style>
